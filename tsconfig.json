{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": false,
    "declaration": false,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": false,
    "inlineSources": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "node"
    ],
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*"
  ]
}
